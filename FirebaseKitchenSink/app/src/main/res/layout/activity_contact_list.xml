<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.doubea.firebasekitchensink.Activities.ContactListActivity">

    <Button
        android:id="@+id/activity_contact_list_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:text="Add a new Contact"/>
    <ListView
        android:id="@+id/activity_contact_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
