<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.doubea.firebasekitchensink.Activities.EditContactActivity">

    <EditText
        android:id="@+id/activity_edit_name_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:hint="Name"/>
    <EditText
        android:id="@+id/activity_edit_PhoneNumber_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="phone"
        android:hint="Phone Number" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_edit_delete_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff0000"
            android:layout_gravity="start"
            android:text="Delete" />
        <Button
            android:id="@+id/activity_edit_save_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#32cd32"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>
