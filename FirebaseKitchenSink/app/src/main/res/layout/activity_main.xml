<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.doubea.firebasekitchensink.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitchen Sink"
        android:layout_gravity="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logging_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logging"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="61dp" />

        <Button
            android:id="@+id/crash_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crashing"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="61dp" />

        <Button
            android:id="@+id/authentication_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authentication"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="61dp" />


        <Button
            android:id="@+id/notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="61dp" />

        <Button
            android:id="@+id/storage_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Storage/Image Uploader"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="61dp" />

        <Button
            android:id="@+id/performance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="61dp" />

        <Button
            android:id="@+id/realtime_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realtime Database"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="61dp" />

        <Button
            android:id="@+id/remoteConfig_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remote Config"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="61dp" />

        <Button
            android:id="@+id/cloudMessaging_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud Messaging"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="61dp" />


    </LinearLayout>
</ScrollView>
